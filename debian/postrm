#!/bin/sh
# postrm script for ubuntu-secure-boot
#
# see: dh_installdeb(1)

set -e

# We put this here so that debconf is invoked first, as it will re-exec this
# script.

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

if [ remove = "$1" -o abort-install = "$1" -o disappear = "$1" ]; then
    dpkg-divert --package ubuntu-secure-boot --remove --rename \
        /usr/sbin/grub-install
    dpkg-divert --package ubuntu-secure-boot --remove --rename \
        /usr/sbin/update-grub
    dpkg-divert --package ubuntu-secure-boot --remove --rename \
        /usr/share/grub/grub-mkconfig_lib
fi

case "$1" in
    purge)
        # Clean up files made by this package.
        rm -rf /etc/ubuntu-secure-boot/keys
        rm -f /etc/ubuntu-secure-boot/grub.cfg
        rm -f /etc/grub.d/01_grub_secure_boot_password
        # Avoid wiping original post*.distrib scripts if they were still there:
        rm -fd /etc/ubuntu-secure-boot
        # Clean boot files:
        rm -f /boot/efi/EFI/ubuntu/securegrubx64.efi
        rm -f /boot/efi/EFI/ubuntu/PK.*
        rm -f /boot/efi/EFI/ubuntu/KEK.*
        rm -f /boot/efi/EFI/ubuntu/db.*
        rm -rf /boot/grub
        rm -f /boot/*.sig

        # Run the original GRUB installer so that the system stays bootable.
        if [ -e /usr/sbin/grub-install ] ; then
            grub-install
        fi
        if [ -e /usr/sbin/update-grub ] ; then
            update-grub
        fi
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

exit 0
